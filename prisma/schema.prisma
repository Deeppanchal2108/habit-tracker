generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  password   String
  name       String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  habits     Habit[]         @relation("UserHabits")
  following  Follow[]        @relation("Follower")
  followers  Follow[]        @relation("Followed")
  completions  Completion[]
}

enum Frequency {
  DAILY
  WEEKLY
}

model Habit {
  id           String       @id @default(uuid())
  user         User         @relation("UserHabits", fields: [userId], references: [id])
  userId       String
  name         String
  description  String?
  frequency    Frequency
  category     String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  completions  Completion[]

  @@unique([userId, name]) 
  @@index([userId])
}



model Completion {
  id           String    @id @default(uuid())
  habit        Habit     @relation(fields: [habitId], references: [id])
  habitId      String
  user         User      @relation(fields: [userId], references: [id])
  userId       String

  timestamp    DateTime  @default(now())

  completion_date DateTime @db.Date

  week_start   DateTime? @db.Date

  createdAt    DateTime  @default(now())


@@unique([habitId, completion_date])
@@unique([habitId, week_start]) 
@@index([habitId])    
@@index([userId])


}


model Follow {
  id           String   @id @default(uuid())
  follower     User     @relation("Follower", fields: [followerId], references: [id])
  followerId   String
  followed     User     @relation("Followed", fields: [followedId], references: [id])
  followedId   String
  createdAt    DateTime @default(now())

  @@unique([followerId, followedId]) 
  @@index([followerId])
  @@index([followedId])
}